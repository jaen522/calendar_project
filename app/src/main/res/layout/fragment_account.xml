<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".accountFragment" >

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="56dp"
        android:text="Account Book"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chk_sname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="463dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.599">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/accountbook_State"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="income" />

            <Button
                android:id="@+id/accountbook_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="expense" />

        </LinearLayout>

        <EditText
            android:id="@+id/a_money"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:ems="10"
            android:hint="How Much"
            android:inputType="text" />

        <EditText
            android:id="@+id/a_name"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:ems="10"
            android:hint="Event name"
            android:inputType="text" />

        <EditText
            android:id="@+id/a_memo"
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:ems="10"
            android:hint="Type the note here..."
            android:inputType="text" />

        <EditText
            android:id="@+id/a_date"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:ems="10"
            android:hint="Date"
            android:inputType="date" />

        <Button
            android:id="@+id/finish_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Event" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>